-var sidebar    = true;
include ../../components/mixin

doctype html
html(lang='en') 
    include ../../components/header-files
    body
        // page-wrapper Start
        #pageWrapper.page-wrapper.compact-wrapper
            include ../../components/header/header
            // Page Body Start
            .page-body-wrapper
                include ../../components/sidebar
                .page-body
                    .container-fluid
                        .page-title
                            .row
                                .col-6
                                    h3
                                        | tag-pills
                                .col-6
                                    ol.breadcrumb
                                        li.breadcrumb-item
                                            a(href='index.html')     
                                                i.iconly-Home.icli
                                        li.breadcrumb-item Ui Kits
                                        li.breadcrumb-item.active tag-pills
                    // Container-fluid starts
                    .container-fluid
                        .row.g-3
                            .col-sm-12.col-xl-6
                                .card
                                    .card-header
                                        h4 Badges Contextual Variations
                                        p.f-m-light.mt-1.mb-0
                                            | Use the
                                            code .badge 
                                            | utility class to make more badges.
                                    .card-body
                                        .badge-spacing
                                            span.badge.btn-primary Primary
                                            span.badge.btn-secondary Secondary        
                                            span.badge.btn-success Success
                                            span.badge.btn-info Info
                                            span.badge.btn-warning Warning
                                            span.badge.btn-danger Danger
                                            span.badge.btn-light.text-dark Light
                                            span.badge.btn-dark Dark
                            .col-sm-12.col-xl-6
                                .card
                                    .card-header
                                        h4 Pills Contextual Variations
                                        p.f-m-light.mt-1.mb-0 
                                            | Use the
                                            code .rounded-pill
                                            |  utility class to make badges more rounded with a larger
                                            code border-radius
                                            |.
                                    .card-body 
                                        .badge-spacing
                                            span.badge.rounded-pill.btn-primary Primary 
                                            span.badge.rounded-pill.btn-secondary Secondary      
                                            span.badge.rounded-pill.btn-success Success    
                                            span.badge.rounded-pill.btn-info Info
                                            span.badge.rounded-pill.btn-warning Warning
                                            span.badge.rounded-pill.btn-danger Danger
                                            span.badge.rounded-pill.btn-light.text-dark Light
                                            span.badge.rounded-pill.btn-dark Dark
                            .col-sm-12.col-xl-6
                                .card
                                    .card-header
                                        h4 Number of Badge
                                        p.f-m-light.mt-1.mb-0 
                                            | Use the
                                            code .badge
                                            |  utility class to make number of more badges.
                                    .card-body
                                        .badge-spacing
                                            a.badge.btn-primary(href='#') 1
                                            a.badge.btn-secondary(href='#') 2
                                            a.badge.btn-success(href='#') 3
                                            a.badge.btn-info(href='#') 4
                                            a.badge.btn-warning(href='#') 5
                                            a.badge.btn-danger(href='#') 6
                                            a.badge.btn-light.text-dark(href='#') 7
                                            a.badge.btn-dark(href='#') 8    
                            .col-sm-12.col-xl-6
                                .card
                                    .card-header
                                        h4 Number of Pills Tags
                                        p.f-m-light.mt-1.mb-0
                                            | Use the
                                            code .rounded-circle
                                            |  utility class to make badges more rounded with a larger
                                            code border-radius
                                            |.
                                    .card-body
                                        .badge-spacing
                                            span.badge.rounded-circle.badge-p-space.btn-primary 1   
                                            span.badge.rounded-circle.badge-p-space.btn-secondary 2
                                            span.badge.rounded-circle.badge-p-space.btn-success 3 
                                            span.badge.rounded-circle.badge-p-space.btn-info 4      
                                            span.badge.rounded-circle.badge-p-space.btn-warning 5
                                            span.badge.rounded-circle.badge-p-space.btn-danger 6
                                            span.badge.rounded-circle.badge-p-space.btn-light.text-dark 7
                                            span.badge.rounded-circle.badge-p-space.btn-dark 8
                            .col-sm-12.col-xl-6
                                .card
                                    .card-header
                                        h4 Badge Tags With Icons
                                        p.f-m-light.mt-1.mb-0 
                                            | Use the 
                                            code .badge 
                                            | utility class to make more icons.
                                    .card-body
                                        .badge-spacing
                                            a.badge.btn-primary.text-light(href='#')         
                                                i.fa-light.fa-dollar-sign  
                                            a.badge.btn-secondary(href='#')
                                                i.fa-solid.fa-headphones-simple
                                            a.badge.btn-success(href='#')
                                                i.fa-solid.fa-link
                                            a.badge.btn-info(href='#')
                                                i.fa-brands.fa-github
                                            a.badge.btn-warning(href='#')
                                                i.fa-solid.fa-award
                                            a.badge.btn-danger(href='#')
                                                i.fa-solid.fa-chart-line
                                            a.badge.btn-light.text-dark(href='#')
                                                i.fa-regular.fa-heart
                                            a.badge.btn-dark(href='#')
                                               i.fa-regular.fa-envelope 
                            .col-sm-12.col-xl-6
                                .card
                                    .card-header
                                        h4 Rounded Pills With Icons
                                        p.f-m-light.mt-1.mb-0
                                            | Use the
                                            code .rounded-pill
                                            |  utility class to make icons badges more rounded with a larger
                                            code border-radius
                                            |.
                                    .card-body
                                        .badge-spacing
                                            a.badge.rounded-circle.btn-primary(href='#')
                                                i.fa-light.fa-dollar-sign   
                                            a.badge.rounded-circle.btn-secondary(href='#')
                                                i.fa-solid.fa-headphones-simple
                                            a.badge.rounded-circle.btn-success(href='#')
                                                i.fa-solid.fa-link
                                            a.badge.rounded-circle.btn-info(href='#')
                                                i.fa-brands.fa-github
                                            a.badge.rounded-circle.btn-warning(href='#')
                                                i.fa-solid.fa-award
                                            a.badge.rounded-circle.btn-danger(href='#')
                                                i.fa-solid.fa-chart-line
                                            a.badge.rounded-circle.btn-light.text-dark(href='#')
                                                i.fa-regular.fa-heart
                                            a.badge.rounded-circle.btn-dark(href='#')
                                                i.fa-regular.fa-envelope
                            .col-sm-12.col-xl-6.mb-3
                                .card
                                    .card-header
                                        h4 Badge Headings Example
                                        p.f-m-light.mt-1.mb-0
                                            | All html headings,
                                            code &lt;h1&gt;
                                            | through 
                                            code &lt;h6&gt;
                                            | , are available in 
                                            code .badge
                                            | tags.
                                    .card-body
                                        h1.pb-2.d-flex.gap-2.flex-wrap
                                            | Badge Heading 1
                                            span.badge.btn-primary Latest
                                        h2.pb-2.d-flex.gap-2.flex-wrap
                                            | Badge Heading 2
                                            span.badge.btn-secondary Trending
                                        h3.pb-2.d-flex.gap-2.flex-wrap
                                            | Badge Heading 3
                                            span.badge.btn-success Checkout
                                        h4.pb-2.d-flex.gap-2.flex-wrap
                                            | Badge Heading 4
                                            span.badge.btn-warning Inbox
                                        h5.pb-2.d-flex.gap-2.flex-wrap
                                            | Badge Heading 5
                                            span.badge.btn-danger Login
                                        h6.pb-2.d-flex.gap-2.flex-wrap
                                            | Badge Heading 6
                                            span.badge.btn-dark Logout
                            .col-sm-12.col-xl-6.mb-3
                                .card
                                    .card-header
                                        h4 Badges As Part Buttons
                                        p.f-m-light.mt-1.mb-0
                                            code .badge
                                            |  can be used as part of
                                            code .btn
                                            |  to provide a icons.
                                    .card-body
                                        .badge-spacing.flex-column.align-items-start
                                            button.btn.btn-primary.d-flex.align-items-center(type='button')
                                                | Messages
                                                span.badge.rounded-circle.btn-p-space.btn-light.text-dark.ms-2
                                                    i.fa-regular.fa-envelope 
                                            button.btn.btn-secondary.d-flex.align-items-center(type='button')
                                                | notifications
                                                span.badge.rounded-circle.btn-p-space.btn-light.text-dark.ms-2
                                                    i.fa-regular.fa-bell    
                                            button.btn.btn-success.d-flex.align-items-center(type='button')
                                                | Update available
                                                span.badge.rounded-circle.btn-p-space.btn-light.text-dark.ms-2
                                                    i.fa-solid.fa-gear
                                            button.btn.btn-info.d-flex.align-items-center.text-light(type='button')
                                                | Playing Now 
                                                span.badge.rounded-circle.btn-p-space.btn-light.text-dark.ms-2
                                                    i.fa-solid.fa-music
                                            button.btn.btn-warning.text-light.d-flex.align-items-center(type='button')   
                                                | 1.2 GB Used 
                                                span.badge.rounded-circle.btn-p-space.btn-light.text-dark.ms-2
                                                    i.fa-solid.fa-triangle-exclamation
                                           
            include ../../components/footer
        include ../../components/footer-files     