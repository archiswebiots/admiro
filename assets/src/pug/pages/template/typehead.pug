- var typeahead             = true;
- var sidebar    = true;
include ../../components/mixin

doctype html
html(lang='en')

    include ../../components/header-files
    body
        #pageWrapper.page-wrapper.compact-wrapper
            include ../../components/header/header
            .page-body-wrapper
                include ../../components/sidebar
                .page-body
                    .container-fluid
                        .page-title
                            .row
                                .col-6
                                    h2
                                        | Switch
                                .col-6
                                    ol.breadcrumb
                                        li.breadcrumb-item
                                            a(href='index.html')
                                                i.iconly-Home.icli
                                        li.breadcrumb-item Form Widgets
                                        li.breadcrumb-item.active Switch
                    // Container-fluid starts
                    .container-fluid
                        .typeahead
                            .row
                                .col-sm-12.col-md-6
                                    .card
                                        .card-header
                                            h3 Basic Demo
                                            p.mt-1.mb-0 
                                                |  This is the simple demo for Typeahead.
                                        .card-body
                                            #the-basics
                                                form.theme-form.typehead-form       
                                                    div
                                                        input.typeahead.form-control(type='text', placeholder='States of USA')
                                .col-sm-12.col-md-6
                                    .card
                                        .card-header
                                            h3 Prefetch
                                            p.mt-1.mb-0
                                                | Prefetched data is fetched and processed on initialization
                                        .card-body
                                            #prefetch
                                                form.theme-form
                                                    div
                                                        input.typeahead.form-control(type='text', placeholder='Countries')
                                .col-sm-12.col-md-6
                                    .card
                                        .card-header
                                            h3 Bloodhound (Suggestion Engine)
                                            p.mt-1.mb-0 
                                                | Bloodhound offers advanced functionalities such as prefetching and backfilling with remote data.
                                        .card-body
                                            #bloodhound
                                                form.theme-form
                                                    div
                                                        input.typeahead.form-control(type='text', placeholder='States of USA')
                                .col-sm-12.col-md-6
                                    .card
                                        .card-header
                                            h3 Remote
                                            p.mt-1.mb-0 
                                                | Remote data is only used when the data provided by local and prefetch is insufficient
                                        .card-body
                                            #remote
                                                form.theme-form
                                                    div
                                                        input.typeahead.form-control(type='text', placeholder='Choose Option')
                                .col-sm-12.col-md-6
                                    .card
                                        .card-header
                                            h4 Custom Templates
                                            p.mt-1.mb-0 
                                                | Custom templates give you full control over how suggestions get rendered
                                        .card-body
                                            #custom-templates
                                                form.theme-form
                                                    div
                                                        input.typeahead.form-control(type='text', placeholder='Oscar winners')
                                .col-sm-12.col-md-6
                                    .card
                                        .card-header
                                            h3 Multiple Sections with Headers
                                            p.mt-1.mb-0 
                                                | Two datasets that are prefetched, stored, and searched on the client. Highlighting is enabled.
                                        .card-body
                                            #multiple-datasets
                                                form.theme-form
                                                    div
                                                        input.typeahead.form-control(type='text', placeholder='NBA and NHL teams') 
                                .col-sm-12.col-md-6.mb-lg-3
                                    .card
                                        .card-header
                                            h3 Scrollable Dropdown Menu 
                                            p.mt-1.mb-0 
                                                | Dataset shows in scrollable dropdown menu.    
                                        .card-body 
                                            #scrollable-dropdown-menu
                                                form.theme-form
                                                    div
                                                        input.typeahead.form-control(type='text', placeholder='Countries')
                                .col-sm-12.col-md-6
                                    .card
                                        .card-header
                                            h3 RTL Support
                                            p.mt-1.mb-0 
                                                | Dataset shows in Right Side.
                                        .card-body
                                            #rtl-support
                                                form.theme-form
                                                    div
                                                        input.typeahead.form-control(type='text', dir='rtl', placeholder='Countries')
                include ../../components/footer 
        include ../../components/footer-files
