//-// mixin notification

mixin Notification(items)

    each item in items
        li.d-flex.align-items-start
            div(class=item.dotClass)
            .flex-grow-1
                h6.f-w-600(class=item.titleClass)=item.title
                    span=item.spanName
                    span.float-end(class=item.dot)
                        +IconlySprite('circle', 'circle-color')
                h5=item.Name
                p=item.subClass


// Notification menu
li.custom-dropdown
    a(href="javascript:void(0)")
        i.iconly-Notification.icli
    .custom-menu.notification-dropdown.py-0.overflow-hidden
        h5.title.bg-primary-light Notification 
            span.font-primary View all
        ul.activity-timeline
            li.d-flex.align-items-start
                .activity-line
                .activity-dot-primary
                .flex-grow-1
                    h6.f-w-600.font-primary 30-04-2023
                        span Today
                        span.circle-dot-primary.float-end
                            +IconlySprite('circle', 'circle-color')
                    h5 Alice Goodwin
                    p.mb-0 Fashion should be fun. It shouldn't be labelled intellectual.
            +Notification(NOTIFICATION_ITEM)